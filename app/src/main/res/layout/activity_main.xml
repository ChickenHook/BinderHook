<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityKotlin">


    <Button
        android:id="@+id/packageManagerTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PackageManagerTest" />

    <Button
        android:id="@+id/permissionTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/packageManagerTest"
        android:text="PermissionTest" />
    <Button
        android:id="@+id/activityManagerTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/permissionTest"
        android:text="ActivityManagerTest" />

    <Button
        android:id="@+id/windowManagerTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityManagerTest"
        android:text="WindowManagerTest" />

    <Button
        android:id="@+id/serviceManagerTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/windowManagerTest"
        android:text="ServiceManagerTest" />

</RelativeLayout>